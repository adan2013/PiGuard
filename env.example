# GSM Module Settings
AT_COMMAND_TIMEOUT=5000
AT_COMMAND_RETRY=3

# Feature Toggles (0 = enabled, 1 = disabled)
DISABLE_WELCOME_SMS=0
DISABLE_ALERT_SMS=0

