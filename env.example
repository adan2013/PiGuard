# Serial Port Configuration
SERIAL_PORT=/dev/ttyUSB0
SERIAL_BAUDRATE=9600

# GPIO Pin Configuration
GPIO_TRIGGER_1=23
GPIO_TRIGGER_2=24
GPIO_TRIGGER_3=25

# Trigger Names
TRIGGER_1_NAME=Front Door
TRIGGER_2_NAME=Back Door
TRIGGER_3_NAME=Window

# Phone Numbers (comma-separated)
